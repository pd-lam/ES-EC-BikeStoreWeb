                                        </li>
                                    }
                                }
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Categories")"
                               class="nav-link pt-3 pb-3 ps-5 pe-5">
                                Category
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Brands")"
                               class="nav-link pt-3 pb-3 ps-5 pe-5">
                                Brand
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Stores")"
                               class="nav-link pt-3 pb-3 ps-5 pe-5">
                                Store
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Tags")"
                               class="nav-link pt-3 pb-3 ps-5 pe-5">
