                        <li class="nav-item">
                            <a href="@Url.Action("Index", "ServicePacks")"
                               class="nav-link pt-3 pb-3 ps-5 pe-5">
                                Service Pack
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="container-fluid col-12 col-md-9 col-xl-10">
            @RenderBody()
        </div>
    </div>

</div>