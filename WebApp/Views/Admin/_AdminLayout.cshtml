@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style
{
    <link href="~/Content/admin-site/admin-site.css" rel="stylesheet" />
}

<div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
        <div class="col-12 col-sm-3 col-xl-2 px-sm-2 px-0 bg-dark d-flex sticky-top">
            <div class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-3 pt-2 text-white">
                <a href="/" class="d-flex align-items-center pb-sm-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="fs-4 mt-2">Bike Store</span>
                </a>
                <ul class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start fs-5" id="menu">
                    <li class="nav-item m-2">
                        <a href="#" class="nav-link px-sm-0 px-2">
                            <i class="fs-5 bx bxs-home"></i><span class="ms-1 d-none d-sm-inline">Home</span>
                        </a>
                    </li>
                    <li class="m-2">
                        <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-sm-0 px-2">
                            <i class="fs-5 bx bxs-dashboard"></i><span class="ms-1 d-none d-sm-inline">Dashboard</span>
                        </a>
                    </li>
                    <li class="m-2">
                        <a href="#" class="nav-link px-sm-0 px-2">
                            <i class="fs-5 bx bx-table"></i><span class="ms-1 d-none d-sm-inline">Orders</span>
                        </a>
                    </li>
                    <li class="dropdown m-2">
                        <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fs-5 bx bxs-package"></i><span class="ms-1 d-none d-sm-inline">Product</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                        </ul>
                    </li>
                    <li class="m-2">
                        <a href="@Url.Action("Customer", "Admin")" class="nav-link px-sm-0 px-2">
                            <i class="fs-5 bx bxs-user"></i><span class="ms-1 d-none d-sm-inline">Customers</span>
                        </a>
                    </li>
                    <li class="m-2">
                        <a href="#" class="nav-link px-sm-0 px-2">
                            <i class='fs-5 bx bxs-store'></i><span class="ms-1 d-none d-sm-inline">Stores</span>
                        </a>
                    </li>
                    <li class="dropdown m-2">
                        <a href="#" class="nav-link dropdown-toggle px-sm-0 px-1" id="dropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fs-5 bx bxs-package"></i><span class="ms-1 d-none d-sm-inline">Others</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdown">
                            <li><a class="dropdown-item" href="#">Categories</a></li>
                            <li><a class="dropdown-item" href="#">Brands</a></li>
                            <li><a class="dropdown-item" href="#">Tags</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="dropdown py-sm-4 mt-sm-auto ms-auto ms-sm-0 flex-shrink-1">
                    <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class='fs-1 bx bxs-user-circle me-2'></i>
                        <span class="d-none d-sm-inline mx-1">ADMIN</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-column h-sm-100">
            @RenderBody()
        </div>
    </div>
</div>