@{
    ViewBag.Title = "Layout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style{ @RenderSection("style", required: false) }

<!-- #region Navbar -->
<section style="font-weight: bold">
    <nav class="navbar navbar-expand-xl bg-light fixed-top">
        <div class="container-fluid">
            <!-- #region logo -->
            <a class="navbar-brand" href="#">
                <img src="/images/logo.png"
                     alt="avatar"
                     style="height: 50px; width: auto" />
            </a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbar"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    style="float: right">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- #endregion -->
            <!-- #region nav item -->
            <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link btn" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="nav-link btn dropdown-toggle"
                               data-bs-toggle="dropdown"
                               style="cursor: pointer">
                                Sản phẩm
                            </a>
                            <ul class="dropdown-menu">
                                @using (var ctx = new WebApp.Models.BikeStoreDbContext())
                                {
                                    foreach (WebApp.Models.category cate in ctx.categories)
                                    {
                                        <li>
                                            <a class="dropdown-item" 
                                               href="@Url.Action("Category", "Home", new {id = cate.category_id})">
                                            @cate.category_name</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" href="#">Khuyến mãi</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" href="#">Dịch vụ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" href="#">Cửa hàng</a>
                    </li>
                </ul>
            </div>

            <div class="collapse navbar-collapse" style="flex-grow: 0" id="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item d-flex">
                        <a class="nav-link btn" href="#">
                            <i class="fa-sharp fa-solid fa-cart-shopping me-1"></i>
                            Giỏ hàng
                            <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" href="#">Tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn" href="/Home/Logout">Đăng xuất</a>
                    </li>
                </ul>

                <form class="d-flex" style="margin: 5px 0 5px 0" role="search">
                    <input class="form-control me-2"
                           type="search"
                           placeholder="Search"
                           aria-label="Search" />
                    <button class="btn btn-outline-secondary"
                            type="submit"
                            style="font-weight: bold">
                        Search
                    </button>
                </form>
            </div>
            <!-- #endregion -->
        </div>
    </nav>
</section>
<!-- #endregion -->

@RenderBody()

