@model WebApp.Models.product

@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container" style="margin-top:100px">
    <div class="row m-0">
        <div class="col-lg-7 pb-5 pe-lg-5">
            <div class="row">
                <div class="col-12 p-5">
                    <img src="@Model.image" width="600" height="600"
                         alt="">
                </div>
            </div>
        </div>
        <div class="col-lg-5 p-0 ps-lg-4">
            <div class="row m-0">
                <div class="col-12 px-4">
                    <div class="d-flex align-items-end mt-4 mb-2">
                        <p class="h4 m-0">
                            <span class="pe-1">@Html.DisplayFor(model => model.product_name)</span>
                        </p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Brand</p>
                        <p class="fs-14 fw-bold">@Html.DisplayFor(model => model.brand.brand_name)</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Category</p>
                        <p class="fs-14 fw-bold">@Html.DisplayFor(model => model.category.category_name)</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Model year</p>
                        <p class="fs-14 fw-bold">@Html.DisplayFor(model => model.model_year)</p>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <p class="textmuted">Promo code</p>
                        <p class="fs-14 fw-bold">-<span class="fas fa-dollar-sign px-1">@Model.product_tag.ToList().FirstOrDefault().active</span>
                        ;
                        </p>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <p class="textmuted fw-bold">Price</p>
                        <div class="d-flex align-text-top ">
                            <span class="fas fa-dollar-sign mt-1 pe-1 fs-14 "></span><span class="h4">@Html.DisplayFor(model => model.list_price)</span>
                        </div>
                    </div>
                </div>
                <div class="col-12 px-0">
                    <div class="row m-0">
                        <div class="col-12  mb-4 p-0">
                            <div class="btn btn-primary">
                                Purchase<span class="fas fa-arrow-right ps-2"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>