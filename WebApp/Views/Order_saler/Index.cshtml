@model IEnumerable<WebApp.Models.join_order_saler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>
@section fieldName
{
    <th>ID</th>
    <th>Name</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Address</th>
}

<!-- RenderBody -->
@foreach (var item in Model)
{
    <tr>
        <td style="width: 50px">
            <span class="custom-checkbox">
                <input type="checkbox"
                       id="checkbox1"
                       name="options[]"
                       value="1">
                <label for="checkbox1"></label>
            </span>
        </td>
        <td style="width: 50px">
            @Html.DisplayFor(modelItem => item.customer_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.order_id)
            @Html.DisplayFor(modelItem => item.order_status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.required_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.shipped_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.staff_id),

        </td>
        <td>
            <a href="@Url.Action("Edit", "Customers",
                    new { id = item.customer_id })">
                <i class='bx bxs-edit-alt float-end fs-4 me-1 ms-1'></i>
            </a>
            <a href="@Url.Action("Details", "Customers",
                    new { id = item.customer_id })">
                <i class='bx bx-detail float-end fs-4 me-1 ms-1'></i>
            </a>
        </td>
    </tr>
}


