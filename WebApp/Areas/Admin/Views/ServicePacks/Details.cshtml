@model WebApp.Models.service_packs

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/_Shared/_DetailsView.cshtml";
}

<h4>Service Packs Details</h4>
<hr />

<div class="input-items">
    @Html.LabelFor(model => model.service_pack_name,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.service_pack_name, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="input-items">
    @Html.LabelFor(model => model.price,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.price, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="row">
    <div class="input-items col-1">
        @Html.ActionLink("Edit", "Edit", new { id = Model.service_pack_id },
       new { @class = "btn btn-default border" })
    </div>
    <div class="input-items col-2">
        @Html.ActionLink("Back to List", "Index", null,
       new { @class = "btn btn-default border" })
    </div>
</div>