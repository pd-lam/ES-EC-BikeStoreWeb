@model WebApp.Models.customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/_Shared/_DetailsView.cshtml";
}

<h4>Customer Details</h4>
<hr />

<div class="input-items">
    @Html.LabelFor(model => model.user_logins.user_name,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.user_logins.user_name, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="input-items">
    @Html.LabelFor(model => model.first_name,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.first_name, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="input-items">
    @Html.LabelFor(model => model.last_name,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.last_name, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="input-items">
    @Html.LabelFor(model => model.phone,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.phone, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="input-items">
    @Html.LabelFor(model => model.email,
   htmlAttributes: new { @class = "control-label col-md-2" })
</div>

<div class="input-items">
    @Html.TextBoxFor(model => model.email, null,
   new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
</div>

<div class="input-items">
    <label class = "control-label col-md-2">
        address
    </label>
</div>

<div class="input-items">
    <input class = "form-control", disabled = "disabled", readonly = "readonly"
           value="@Model.street @Model.district @Model.city"/>
</div>

<div class="row">
    <div class="input-items col-1">
        @Html.ActionLink("Edit", "Edit", new { id = Model.customer_id },
       new { @class = "btn btn-default border" })
    </div>
    <div class="input-items col-2">
        @Html.ActionLink("Back to List", "Index", null,
       new { @class = "btn btn-default border" })
    </div>
</div>
