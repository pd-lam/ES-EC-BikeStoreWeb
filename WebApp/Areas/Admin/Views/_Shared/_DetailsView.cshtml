
@{
    ViewBag.Title = "_DetailsView";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section style
{
    <style>
        * {
            padding: 0;
            margin: 0
        }

        body {
            background-color: #f8f8f8;
            display: flex;
            justify-content: center;
            align-items: center
        }

        .container {
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center
        }

        .wrapper {
            width: 1000px;
            height: 700px;
            position: relative;
            border-radius: 10px
        }

        .outer-card {
            width: 100%;
            height: 100%;
            background-color: #fff;
            border-radius: 10px
        }

        input,
        input::-webkit-input-placeholder {
            font-size: 16px;
            line-height: 3
        }

        .wrapper .card::after {
            position: absolute;
            content: "";
            width: 200px;
            height: 200px;
            background-color: #3641d3;
            right: -30px;
            top: -30px;
            border-radius: 50%;
            opacity: 0.7
        }

        .wrapper .card::before {
            position: absolute;
            content: "";
            width: 300px;
            height: 300px;
            background-color: #3641d3;
            left: -70px;
            top: -70px;
            border-radius: 50%;
            opacity: 0.4
        }

        .wrapper .forms {
            padding-top: 30px;
            padding-left: 20px;
            padding-right: 20px
        }

            .wrapper .forms input {
                height: 40px;
                width: 100%;
                font-size: 18px;
                border: 2px solid #eee;
                border-radius: 4px;
                text-indent: 10px;
                margin-top: 4px
            }

                .wrapper .forms input:focus {
                    outline: none
                }

        .input-items span {
            font-size: 14px;
            margin-left: 2px
        }

        .input-items {
            margin-bottom: 10px
        }
    </style>
}

<div class="container">
    <div class="wrapper">
        <div class="outer-card">
            <div class="forms">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

